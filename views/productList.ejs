<!DOCTYPE html>
<html>
    <%- include('global/_head', {title:"Welecom to Surprise!"}); %>
    <body>
        <%- include('global/_topBanner'); %>
        <section class="main-content">
            <div class="main-content-box">
                <div class="main-content-title">
                    <h1>Surprises For You</h1>
                </div>
                <div class="search-result-list">
                    <% productList.forEach(function(product){ %>
                        <div class="search-result-list-item">
                            <a href="/productDetail?sku=<%= product.sku %>">
                            <img src="/public/image/<%= product.picture %>" width="200" height="200" alt="Product Details">
                            <div class="search-result-list-item-row">
                                <div class="search-result-list-item-price">
                                    <sup class="search-result-list-item-price-currency">$</sup> <%= product.price %>
                                </div>
                                <div class="search-result-list-item-name">
                                    <%= product.name %>
                                </div>
                            </div>
                            </a>
                        </div>
                    <% }); %>
                </div>    
            </div>
        </section>
        <%- include('global/_footer'); %>
        <script type="text/javascript">
    
        </script>
    </body>
</html>