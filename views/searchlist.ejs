<!DOCTYPE html>
<html>
    <%- include('global/_head', {title:"Welecom to Surprise!"}); %>
    <body>
        <header class="top-banner">
            <div class="top-banner-title"><a href="/">Surprise</a></div>
            <ul class="top-login-group">
                <li><a href="/myAccount">My Account</a></li>
                <li>|</li>
                <li><a href="/logout">Sign Out</a></li>
            </ul>
        </header>
        <section class="main-content">
            <div class="main-content-box">
                <div class="product-list">

                    <div class="product-list-title">Your Result</div>
                    <% productList.forEach(function(product){ %>
                        <div class="product-item">
                            <% if(product.isDefault){ %>
                                <div class="product-item-default">Default product</div>
                            <% } %>
                            <ul class="product-item-content">
                                <li><strong><%= product.name %></strong></li>
                                <li><%= product.price %></li>
                                <li><%= product.description %></li>
                                <% } %>
                                <li><%= product.picture %></li>
                            </ul>
                            <ul class="product-item-action">
                                <% if(!product.isDefault){ %>
                                    <li><a class="product-item-action-default" href="/setAsDefaultproduct?id=<%= product.id %>">Set as default product</a></li>
                                <% } %>
                                <li><a href="/editproduct?id=<%= product.id %>">Edit</a></li>
                                <% if(!product.isDefault){ %>
                                    <li><a class="product-item-action-delete" href="/deleteproduct?id=<%= product.id %>">Delete</a></li>
                                <% } %>
                            </ul>
                        </div>
                    <% }); %>
                </div>      
            </div>
        </section>
        <footer class="site-footer">
            <ul class="site-footer-content">
                <li>All rights reserved Â© 2017</li>
                <li>CS6360 Group 4, Spring 2017, UTDallas</li>
            </ul>
        </footer>
</html>