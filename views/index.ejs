<!DOCTYPE html>
<html>
    <%- include('global/_head', {title:"Welecom to Surprise!"}); %>
    <body>
        <header class="top-banner">
            <div class="top-banner-title"><a href="/">Surprise</a></div>
            <ul class="top-login-group">
                <% if (!hasLogin) { %>
                    <li><a href="/login">Login</a></li>
                <% } %>
                <% if (hasLogin) { %>
                    <li><a href="/myAccount">My Account</a></li>
                    <li>|</li>
                    <li><a href="/logout">Sign Out</a></li>
                <% } %>
            </ul>
        </header>

        <section class="main-content">
            <div class="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item carousel-item-1">
                        <img src="public/image/c1.jpg">
                    </div>
                </div>
            </div>
            <div class="search-wrapper">
                <div class="search-box">
                    <form class="gform-wrapper" action="/search" method="post">
                        <div class="gform-row">
                            <div class="gform-col-12">
                                 <div class="gform-input-group">
                                    <input type="text" name="keyword" placeholder="Tell us what you want.">
                                </div>
                            </div>
                        </div>
                        <div class="gform-row">
                            <div class="gform-col-12">
                                 <button class="search">Search</button>
                                 <button class="look">Just have a look.</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div> 
        </section>
        <footer class="site-footer">
            <ul class="site-footer-content">
                <li>All rights reserved Â© 2017</li>
                <li>CS6360 Group 4, Spring 2017, UTDallas</li>
            </ul>
        </footer>
    </body>
</html>