<!DOCTYPE html>
<html>
    <%- include('global/_head', {title:"Welecom to Surprise!"}); %>
    <body>
        <header class="top-banner">
            <div class="top-banner-title"><a href="/">Surprise</a></div>
            <ul class="top-login-group">
                <% if (!hasLogin) { %>
                    <li><a href="/login">Login</a></li>
                <% } %>
                <% if (hasLogin) { %>
                    <li><a href="/myAccount">My Account</a></li>
                    <li>|</li>
                    <li><a href="/logout">Sign Out</a></li>
                <% } %>
            </ul>
        </header>
        <section class="main-content">
            <div class="main-content-box">
                <div class="product-detail">
                    <div class="product-detail-left">
                        <img src="/public/image/<%= product.picture %>" width="300" height="300" alt="Product Details">
                    </div>
                    <div class="product-detail-right">
                        <div class="product-details-name">
                            <%= product.name %>
                        </div>
                        <div class="product-details-description">
                            <%= product.description %>
                        </div>
                        <div class="product-details-action-group">
                            <div class="product-details-price">
                                <sup class="product-details-price-currency">$</sup> <%= product.price %>
                            </div>
                            <button>
                                Buy Now
                            </button>
                            <button class="light">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                    
                </div>    
            </div>
        </section>
        <%- include('global/_footer'); %>
        <script type="text/javascript">
    
        </script>
    </body>
</html>